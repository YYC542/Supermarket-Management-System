[flake8]
# Maximum line length
max-line-length = 127

# Maximum complexity
max-complexity = 10

# Exclude directories
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist

# Ignore specific errors
ignore = 
    E203,  # Whitespace before ':'
    W503,  # Line break before binary operator

# Files to check
filename = *.py

# Show source code for errors
show-source = True

# Show statistics
statistics = True

# Count errors
count = True
